<Window x:Class="HasznaltAutoKliens.PopupWindow_GetCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HasznaltAutoKliens"
        mc:Ignorable="d"
        Title="Add new car" Height="500" Width="250"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid
        x:Name="CarDetailsGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock 
                Grid.Column="0"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Make"/>
            <TextBlock 
                Grid.Column="0"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Model"/>
            <TextBlock 
                Grid.Column="0"
                Grid.Row="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Production date"/>
            <TextBlock 
                Grid.Column="0"
                Grid.Row="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Mileage"/>
            <TextBlock 
                Grid.Column="0"
                Grid.Row="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="License plate"/>
            <TextBlock 
                Grid.Column="0"
                Grid.Row="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Fuel type"/>
            <TextBlock 
                Grid.Column="0"
                Grid.Row="6"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="Price"/>
            <TextBox 
                IsReadOnly="True"
                Grid.Column="1"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="115"
                Text="{Binding MakeName}"/>
            <TextBox 
                IsReadOnly="True"
                Grid.Column="1"
                Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="115"
                Text="{Binding ModelName}"/>
            <TextBox 
                IsReadOnly="True"
                Grid.Column="1"
                Grid.Row="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="115"
                Text="{Binding ProductionDate}"
                ToolTip="Format: 'yyyy/MM' or 'yyyy/M'" />
            <TextBox 
                IsReadOnly="True"
                Grid.Column="1"
                Grid.Row="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="115"
                Text="{Binding Mileage}"/>
            <TextBox 
                IsReadOnly="True"
                Grid.Column="1"
                Grid.Row="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="115"
                Text="{Binding VehicleRegistrationDto.LicensePlate}"
                ToolTip="Format: 'ABC-123'"/>
            <TextBox 
                IsReadOnly="True"
                Grid.Column="1"
                Grid.Row="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="115"
                Text="{Binding FuelTypeName}"/>
            <TextBox 
                IsReadOnly="True"
                Grid.Column="1"
                Grid.Row="6"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="115"
                Text="{Binding Price}"
                ToolTip="In HUF"/>
        </Grid>
    </Grid>
</Window>
